
@{
    ViewBag.Title = "AutocompliteTest";
}

<h2>AutocompliteTest</h2>


<div id="locationField">
    <input id="autocomplete"
           placeholder="Enter your address"
           @*onFocus="geolocate()"*@
           type="text" />
</div>

<script>
    $(function ()
    {
        var cont = {
            inputField: 'autocomplete',             //имя поля для ввода
            //опции для настройки поиска
            options: {
                bounds: null,                       //границы поиска
                componentRestrictions: null,        //ограничение по региону
                fields: ['All'],            //ограничение выводимых данных, см google.maps.places.PlaceResult interface
                strictBounds: false,                //подтверждене ограничения поиска по заданным границам
                types: ['geocode'],                 //The types of predictions to be returned. For a list of supported types, see the https://developers.google.com/places/supported_types#table3.
            },
        };
        as.map.autoSearchPlace(cont);
    });
</script>